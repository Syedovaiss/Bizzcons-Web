<%- include('commons/admin/head.ejs') %>
  <%- include('commons/admin/nav.ejs') %>
    <%- include('commons/admin/sidebar.ejs') %>

    <style>
      .appendEllipsis {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width:fit-content;
      }
    </style>

      <div class="main-content">
        <section class="section">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h4>All News</h4>

                </div>
                <div class="card-body p-0">
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <tr>
                        <th class="text-center">

                        </th>
                        <th>News Title</th>
                        <th>Delete</th>
                      </tr>
                      <tr>
                        <% if(news) { %>
                          <% for(var i=0; i < news.length; i++) { %>
                            <td class="p-0 text-center">

                            </td>

                            <td class="appendEllipsis">
                              <%= news[i].news_title %>
                            </td>
                           

                            <td><a href="/admin/news/delete/<%= news[i].news_id %>" class="btn btn-outline-danger">Delete</a></td>
                        

                      </tr>
                      <% } %>
                        <% } %>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>


      <%- include('commons/admin/end.ejs') %>